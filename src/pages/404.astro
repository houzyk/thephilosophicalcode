---
import Favicon from "../components/Favicon.astro";
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <Favicon />
  <title>404 - Page Not Found</title>
</head>
<body>
  <div class="error-page">
    <div>
      <h1 class="name gradient-text gradient-color outline outline-color">The Philosophical Code</h1>
      <p>404 - Page Not Found</p>
      <a href="/" class="animated">Go Back Home</a>
    </div>
  </div>
</body>
</html>

<style>

  :root {
    font-family: Verdana, sans-serif;
    --text: #1e293b;
    --text-heading: #0f172a;
    --text-link: #2563eb;
    --background: #ffffff;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text: #d2d3d7;
      --text: #d4d4d8;
      --text-heading: #fafafa;
      --text-link: #20bdff;
      --background: #18181b;
    }

    html {
      color-scheme: dark;
    }
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    color: var(--text);
    background: var(--background);
  }

  a:not(.unset) {
    color: var(--text-link);
    text-decoration: none;
    border-bottom: 1px solid #ccc;
  }

  a.animated {
    --animated-underline-from: var(--text-link);
    --animated-underline-to: var(--text-link);
    position: relative;
    box-decoration-break: clone;
    text-decoration: none;
  }

  a.animated:after {
    left: 0;
    right: 0;
    bottom: -2px;
    content: "";
    height: 2px;
    position: absolute;
    transform:translateY(2px);
    opacity: 0;
    transform-origin: center center;
    transition: all 0.15s ease-in-out;
    background-image: linear-gradient(to right, var(--animated-underline-from), var(--animated-underline-to));
  }

  a.animated:hover:after {
    transform: translateY(0);
    opacity: 0.5;
  }

  a.animated.active:after {
    transform: translateY(0);
    opacity: 1;
  }

  h1 {
    font-size: 3rem;
    line-height: 1.2;
    color: var(--text-heading);
  }

  p {
    font-size: 1.25rem;
    font-weight: bold;
  }

  .gradient-text {
    --gradient-text-from: hotpink;
    --gradient-text-to: hotpink;
    --gradient-text-via: var(--gradient-text-from), var(--gradient-text-to);
    color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
    text-fill-color: transparent;
    -webkit-text-fill-color: transparent;
    background-image: linear-gradient(135deg, var(--gradient-text-from), var(--gradient-text-via), var(--gradient-text-to));
  }

  .outline {
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 0.075rem var(--outline-color);
  }

  .gradient-color {
    --gradient-text-from: #5433ff;
    --gradient-text-via: #20bdff;
    --gradient-text-to: #a5fecb;
  }

  .outline-color {
    --outline-color: var(--text-heading);
  }

  @media (prefers-color-scheme: dark) {
    .gradient-color {
      --gradient-text-from: #a5fecb;
      --gradient-text-via: #20bdff;
      --gradient-text-to: #a5fecb;
    }
    .outline-color {
      --outline-color: transparent;
    }
  }

  .name {
    font-size: 3rem;
    margin: 0;
    letter-spacing: -2px;
    line-height: 3.5rem;
  }

  .error-page {
    height: 100dvh;
    text-align: center;
    display: grid;
    align-items: center;
  }
</style>
